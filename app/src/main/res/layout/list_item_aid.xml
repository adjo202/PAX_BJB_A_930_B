<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/aid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/font_size_small" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tac_denial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tac_denial"
                    android:textColor="@color/prompt_text_color"
                    android:textSize="@dimen/font_size_smaller" />

                <TextView
                    android:id="@+id/tac_denial_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.80"
                    android:textSize="@dimen/font_size_smaller" />

                <TextView
                    android:id="@+id/tac_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tac_online"
                    android:textColor="@color/prompt_text_color"
                    android:textSize="@dimen/font_size_smaller" />/>

                <TextView
                    android:id="@+id/tac_online_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:textSize="@dimen/font_size_smaller" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tac_default"
                    android:textColor="@color/prompt_text_color"
                    android:textSize="@dimen/font_size_smaller" />

                <TextView
                    android:id="@+id/tac_default_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.54"
                    android:textSize="@dimen/font_size_smaller" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver"
                    android:textColor="@color/prompt_text_color"
                    android:textSize="@dimen/font_size_smaller" />

                <TextView
                    android:id="@+id/version_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:textSize="@dimen/font_size_smaller" />
        </LinearLayout>


</LinearLayout>

