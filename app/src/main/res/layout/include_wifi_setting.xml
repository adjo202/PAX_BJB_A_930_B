<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37.5dp"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/signal_level"
            android:textColor="#ff000000"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/signal_level"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text="@string/strong"
            android:textColor="#ff000000"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37.5dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/safety"
            android:textColor="#ff000000"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/security_type"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text="WPA/WPA2 PSK"
            android:textColor="#ff000000"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwd_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e3e3e3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:text="@string/passwd"
            android:textColor="#ff000000"
            android:textSize="@dimen/font_size_normal" />

        <com.pax.view.CustomEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="12.5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/tk_bg"
            android:gravity="center"
            android:inputType="textPassword"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#ff000000"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

</LinearLayout>