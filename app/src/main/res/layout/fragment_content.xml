<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

    <TextView
        android:id="@+id/app_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:text="@string/app_name"
        android:textSize="@dimen/app_flag_text_size"
        android:textColor="#264f8a"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="45dp"
            android:gravity="start"
            android:text="@string/prompt_trans_amount"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_large" />

        <com.pax.view.CustomEditText
            android:id="@+id/amount_edtext"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:focusable="true"
            android:gravity="end|center_vertical"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_largest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/scan_bar_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sm1"
                android:gravity="center" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bank_card_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sm2"
                android:gravity="center" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/quick_pass_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sm3"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>